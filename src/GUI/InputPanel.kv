#                Rectangle:
#                    size: self.size
#                    pos: self.pos
        OperatorButton:
            send_data: root.DIVI
            keycode: root.key_codes["/"]
            text: "รท"

    ButtonContainer:
        NumberButton:
            send_data: root.SEVEN
            keycode: root.key_codes["7"]
