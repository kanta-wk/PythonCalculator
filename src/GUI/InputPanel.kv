        NumberButton:
            send_data: root.EIGHT
            keycode: root.key_codes["8"]
            text: "8"
        NumberButton:
            send_data: root.NINE
            keycode: root.key_codes["9"]
            text: "9"
        OperatorButton:
            send_data: root.MULTI
            keycode: root.key_codes["*"]
            text: "ร"

    ButtonContainer:
        NumberButton:
            send_data: root.FOUR
            keycode: root.key_codes["4"]
