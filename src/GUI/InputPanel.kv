#:kivy 2.0.0

<InputButton>:
    canvas.before:
        Color:
            rgba: .5, .5, .5, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height
    size_hint_x: 1
    size_hint_y: 1
    send_data: ""
    keycode: 0
    font_size: 80
    background_normal: ""

<NumberButton@InputButton>:
    background_color: 0.199, 0.199, 0.199
    on_press: app.number_button_on_press(send_data=self.send_data)

<DecimalButton@InputButton>:
    background_color: 0.199, 0.199, 0.199
    on_press: app.decimal_button_on_press(send_data=self.send_data)

<OperatorButton@InputButton>:
    background_color: 0.472, 0.429, 0.406
    on_press: app.operator_button_on_press(send_data=self.send_data)

<EqualButton@InputButton>:
    background_color: 0.835, 0.476, 0.234
    on_press: app.equal_button_on_press(send_data=self.send_data)

<ACButton@InputButton>:
    background_color: 0.472, 0.429, 0.406
    on_press: app.ac_button_on_press(send_data=self.send_data)

<InputPanel>:
    orientation: "vertical"
    canvas.before:
        Color:
            rgba: app.BACK_GROUND_COLOR
        Rectangle:
            size: self.size
            pos: self.pos
    ButtonContainer:
        ACButton:
            send_data: root.AC
            keycode: root.key_codes["escape"]
            font_size: 60
            text: "AC"
        Widget:
#            canvas.before:
#                Color:
